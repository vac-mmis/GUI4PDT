{
    "compilerOptions": {
        "experimentalDecorators": true,
        "target": "ESNext",
        "module": "CommonJS",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "moduleResolution": "node",
        "baseUrl": "src/",
        "paths": {
            "@/*": ["*"]
        },
        "types": ["three"],
        "lib": ["dom"]
    },
    "include": ["src/**/*", "src/*"]
}
